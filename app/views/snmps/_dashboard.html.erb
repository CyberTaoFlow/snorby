<%= title "Snmp" do %>

	<%= drop_down_for('More Options', 'icons/filter.png', 'options') do %>

		<%= drop_down_item "Last Week", snmps_path(:range => :last_week), nil, { :class => 'dashboard' } %>
		<%= drop_down_item "Last Month", snmps_path(:range => :last_month), nil, { :class => 'dashboard' } %>
		
		<%= drop_down_item "Export To PDF", 
		snmps_path(:range => params[:range] == 'today' ? 'now' : params[:range], :format => :pdf), nil, { :class => 'dashboard' } %>

	<% end %>

<% end %>

<div id='dashboard' class=''>
	
	<div class='main grid_9'>

		<div class='dashboard-menu'>
			<ul>
				<li class='<%= "active" if @range == 'last_3_hours' %> add_tipsy' title="<%= time_range_title(:last_3_hours) %>"><%= link_to "Last 3", snmps_path(:range => :last_3_hours) %></li>

				<li class='<%= "active" if @range == 'today' %> add_tipsy' title="<%= time_range_title(:today) %>"><%= link_to "Today", snmps_path(:range => :today) %></li>
				
				<li class='<%= "active" if @range == 'yesterday' %> add_tipsy' title="<%= time_range_title(:yesterday) %>"><%= link_to "Yesterday", snmps_path(:range => :yesterday) %></li>
				
				<li class='<%= "active" if @range == 'week' %> add_tipsy' title="<%= time_range_title(:week) %>"><%= link_to "This Week", snmps_path(:range => :week) %></li>
				
				<li class='<%= "active" if @range == 'month' %> add_tipsy' title="<%= time_range_title(:month) %>"><%= link_to "This Month", snmps_path(:range => :month) %></li>
				
				<li class='<%= "active" if @range == 'quarter' %> add_tipsy' title="<%= time_range_title(:quarter) %>"><%= link_to "This Quarter", snmps_path(:range => :quarter) %></li>
				
				<li class='<%= "active" if @range == 'year' %> add_tipsy' title="<%= time_range_title(:year) %>"><%= link_to "This Year", snmps_path(:range => :year) %></li>

				<% if Snorby::Jobs.snmp? %>

					<% content_for :footer do %>
						<script type="text/javascript">
							setTimeout(function(){
								location.reload();
							},50000);
						</script>
					<% end %>

				<% end %>

				<% unless %w(yesterday week last_week month last_month year quarter).include?(params[:range]) or @last_snmp.nil? %>
					<li class='right'><i>Updated: <%= @last_snmp.timestamp.strftime('%D %l:%M:%S %p') %></i></li>
				<% end %>

			</ul>

		</div>

		<div id='box-holder'>
			<%= render 'severity_dashboard.html.erb' %>
		</div>

		<div id="box-tabs">

			<ul id="box-menu">
				<li class='active'><%= link_to "Sys CPU", '#', :class => 'show_cpu_graph' %></li>
				<li><%= link_to "User CPU", '#', :class => 'show_user_cpu_graph' %></li>
				<li><%= link_to "Memory", '#', :class => 'show_memory_graph' %></li>
				<li><%= link_to "HDD", '#', :class => 'show_disk_graph' %></li>
				<li><%= link_to "Severities", '#', :class => 'show_severity_graph' %></li>
			</ul>

		</div>
		
		<%= render 'graph_dashboard.html.erb' %>
		
	</div>
	
	<div class='secondary grid_3 alpha'>
	
		<div class='dashboard-header'>
			<span>Top 5 Sys Cpu Sensors</span>
		</div>
		
		<ul class='box-list'>
			<% @cpu_metrics.map {|x| [x[:name], x[:data].sum / x[:data].count]}.sort{|x, y| y[1] <=> x[1]}.first(5).each do |sensor| %>
				<li>
					<%= sensor[0] %> 

        			<span>
          				<%= sensor[1].round(2) %>
        			</span>
      			</li>
			<% end %>
		</ul>
		
		<div class='dashboard-header'>
			<span>Top 5 User Cpu Sensors</span>
		</div>
		
		<ul class='box-list'>
			<% @user_cpu_metrics.map {|x| [x[:name], x[:data].sum / x[:data].count]}.sort{|x, y| y[1] <=> x[1]}.first(5).each do |sensor| %>
				<li>
					<%= sensor[0] %> 

        			<span>
          				<%= sensor[1].round(2) %>
        			</span>
      			</li>
			<% end %>
		</ul>
		
		<div class='dashboard-header'>
			<span>Top 5 Memory Sensors</span>
		</div>
		
		<ul class='box-list'>
			<% @memory_metrics.map {|x| [x[:name], x[:data].sum / x[:data].count]}.sort{|x, y| y[1] <=> x[1]}.first(5).each do |sensor| %>
				<li>
					<%= sensor[0] %> 

        			<span>
          				<%= sensor[1].round(2) %>
        			</span>
      			</li>
			<% end %>
		</ul>
		
		<div class='dashboard-header'>
			<span>Top 5 HDD Sensors</span>
		</div>
		
		<ul class='box-list'>
			<% @disk_metrics.map {|x| [x[:name], x[:data].sum / x[:data].count]}.sort{|x, y| y[1] <=> x[1]}.first(5).each do |sensor| %>
				<li>
					<%= sensor[0] %> 

        			<span>
          				<%= sensor[1].round(2) %>
        			</span>
      			</li>
			<% end %>
		</ul>
		
		<div class='dashboard-header'>
			<span>Last 10 Traps</span>
		</div>
		
		<ul class='box-list'>
			<% @traps.each do |trap| %>
				<li>
					<%= link_to truncate(trap.message, :length => 15, :omission => '...'), trap_results_path() %>
					
					<span>
						<%= link_to trap.hostname, trap_results_path(:search => {:hostname => "#{trap.hostname}"}) %>
					</span>
      			</li>
			<% end %>
		</ul>
		
	</div>
</div>