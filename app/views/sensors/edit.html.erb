<script type="text/javascript">
  $('dl.sensor-menu').fadeOut();
</script>

<%= snorby_box("Update Domain", false) do %>

  <%= form_for(@sensor) do |f|%>

    <%= error_messages_for(@sensor) %>

    <p><%= f.label :name %><br />
      <%= f.text_field :name, :placeholder => 'Domain Name', :class => 'required', :disabled => 'disabled' if @sensor.is_virtual_sensor? %>
      <%= f.text_field :name, :placeholder => 'Domain Name', :class => 'required' unless @sensor.is_virtual_sensor? %>
    </p>

    <% if @sensor.is_virtual_sensor? %>
    <p><%= f.label :ip %><br/>
      <%= f.text_field :ipdir, :placeholder => 'Ip Sensor', :class => 'required' %>
    </p>
    <% end %>

    <br/><br/>

    <%= snorby_box_footer do %>
      <%= form_actions do %>
        <%= f.submit "Save", :class => 'success' %>
        <%= button "Cancel", :class => 'warning cancel-snorbybox' %>
      <% end %>
    <% end %>

  <% end %>

<% end %>