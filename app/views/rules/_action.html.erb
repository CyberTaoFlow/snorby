<dl class="rule_actions">
  <dd><%=action.nil? ? "actions" : action.name %></dd>
</dl>
<dl class='rule_actions-menu' style='display:none;'>
  <div class="arrow"></div>
  <% actions.each do |a| %>
    <dd class="rule_action-button" data="<%= a.id %>">
      <%= link_to a.name, '#' %>
    </dd>
  <%end%>
</dl>