<div id="traps" class='grid_12 boxit' data-action='<%= params[:action] %>' data-page='<%= params[:page].to_i %>'>
  <ul class='table'>
    <li class='header'>
      <div class='row'>
        <div class='address'>
          <%= sortable(:ip, 'Ip')%>
        </div>
        <div class='port'>Port</div>
        <div class='protocol'>Protocol</div>
        <div class='address'>
          <%= sortable(:hostname, 'Hostname') %>
        </div>
        <div class='address'>Community</div>
        <div class='value'>Message</div>
        <div class='timestamp'>
          <%= sortable(:timestamp, 'Timestamp')%>
        </div>
      </div>
    </li>

    <div class='content'>
      <%= render @traps %>
    </div>
  </ul>
  <%= pager(@traps, request.fullpath) %>
</div>