<div id="traps" class='grid_12 boxit' data-action='<%= params[:action] %>' data-page='<%= params[:page].to_i %>'>
    
	<%= form_tag mass_update_snmps_path do %>
    
		<%= hidden_field_tag :selected_traps, [] %>
    
		<ul class='table'>
            
			<li class='header'>
				<div class='row'>
					<div class='small'>
						<%= check_box_tag 'trap-select-all', nil, false, :class => 'event-select-all' %>
					</div>
                    
					<div class='address'>
						<%= sortable(:ip, 'Ip')%>
					</div>
                    
					<div class='port'>
						Port
					</div>

					<div class='port'>
						Protocol
					</div>
                    
					<div class='address'>
						<%= sortable(:hostname, 'Hostname') %>
					</div>
                    
					<div class='address'>
						Community
					</div>

					<div class='value'>
						Message
					</div>
                    
					<div class='timestamp'>
						<%= sortable(:timestamp, 'Timestamp')%>
					</div>
				</div>
			</li>
            
			<div class='content'>
				<%= render @traps %>
			</div>
            
		</ul>
    
	<% end %>
    
    <%= pager(@traps, request.fullpath) %>
    
</div>